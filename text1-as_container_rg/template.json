{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_ldcapp101_name": {
            "defaultValue": "ldcapp101",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[parameters('containerGroups_ldcapp101_name')]",
            "location": "southeastasia",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerGroups_ldcapp101_name')]",
                        "properties": {
                            "image": "ubuntu",
                            "command": [
                                "tail",
                                "-f",
                                "/dev/null"
                            ],
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 22
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "Always",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 22
                        }
                    ],
                    "type": "Public"
                },
                "osType": "Linux"
            }
        }
    ]
}